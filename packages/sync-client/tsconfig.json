{
  "extends": "@usex/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "es2020"],
    "baseUrl": "./",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".turbo"
  ]
}
