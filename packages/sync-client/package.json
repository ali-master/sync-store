{
  "name": "@usex/sync-client",
  "version": "0.0.0",
  "description": "A robust and flexible client-side communication layer for data synchronization, supporting both WebSocket and HTTP REST protocols with intelligent fallback mechanisms.",
  "author": {
    "name": "Ali Torki",
    "url": "https://github.com/ali-master",
    "email": "ali_4286@live.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ali-master/sync-store.git",
    "directory": "packages/sync-client"
  },
  "private": false,
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "socket.io-client": "^4.8.1",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/node": "^24.2.1",
    "@usex/tsconfig": "workspace:*",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tsup": "^8.5.0"
  },
  "packageManager": "pnpm@10.14.0"
}
